---
import Layout from '../layouts/Layout.astro';
import Converter from '../components/converter';
import ConversionTable from "@/components/conversion-table";
import PosthogLayout from '../layouts/PosthogLayout.astro';

const pageTitle = "Кириллээр бичих — Латинаас Кирилл хөрвүүлэгч (Монгол) | Kirilleer";
const pageDescription = "Латинаар бичсэнийг монгол Кирилл үсгээр шууд хөрвүүлнэ. Түргэн, үнэгүй, нэвтрэлгүй.";
const ogImage = "/og-image.svg";

const siteUrl = Astro.url.toString();
const jsonLd = {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    "name": "Монгол латин → кирилл хөрвүүлэгч",
    "applicationCategory": "UtilityApplication",
    "operatingSystem": "All",
    "url": siteUrl,
    "inLanguage": "mn",
    "description": pageDescription,
    "image": ogImage,
    "offers": { "@type": "Offer", "price": "0", "priceCurrency": "MNT" },
    "potentialAction": {
        "@type": "SearchAction",
        "target": {
            "@type": "EntryPoint",
            "urlTemplate": siteUrl
        },
        "query-input": "required name=search_term_string"
    }
};
---

<Layout title={pageTitle} description={pageDescription} ogImage={ogImage}>
	
	<Fragment slot="head">
		<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
	</Fragment>

    <div class="min-h-dvh flex flex-col items-center px-4 sm:px-6 pt-20 sm:pt-32 pb-16">
        
        <!-- Hero Section -->
        <div class="text-center space-y-6 max-w-4xl mx-auto mb-12 animate-in fade-in slide-in-from-bottom-8 duration-700">
            <div class="inline-flex items-center rounded-full border border-primary/20 bg-primary/5 px-3 py-1 text-sm font-medium text-primary backdrop-blur-xl">
                <span class="flex h-2 w-2 rounded-full bg-primary mr-2 animate-pulse"></span>
                Шинэчлэгдсэн хувилбар
            </div>
            
            <h1 class="text-4xl sm:text-7xl font-black tracking-tighter text-foreground">
                Монгол галиг <br class="hidden sm:block" />
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-orange-500 to-amber-500">
                    кирилл хөрвүүлэгч
                </span>
            </h1>
            
            <p class="max-w-2xl mx-auto text-lg sm:text-xl text-muted-foreground leading-relaxed">
                Латин үсгээр бичсэн монгол текстийг кирилл үсэг рүү <span class="font-semibold text-foreground">шууд</span> хөрвүүлнэ.
            </p>
        </div>

        <!-- Main Tool Section -->
        <div class="w-full max-w-3xl animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-200">
             <!-- Glow effect -->
            <div class="relative group">
                <div class="absolute -inset-0.5 bg-gradient-to-r from-primary/30 to-amber-500/30 rounded-2xl blur-2xl opacity-50 dark:opacity-20 transition duration-1000 group-hover:opacity-70 group-hover:duration-200"></div>
                <div class="relative">
                    <Converter client:load />
                </div>
            </div>

            <div class="mt-10 space-y-8">
                <div class="grid grid-cols-3 gap-4 text-sm text-muted-foreground max-w-lg mx-auto">
                    <div class="flex flex-col items-center gap-2 text-center p-3 rounded-lg bg-secondary/20 border border-border/50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                        <span class="font-medium text-foreground">Үнэгүй</span>
                    </div>
                    <div class="flex flex-col items-center gap-2 text-center p-3 rounded-lg bg-secondary/20 border border-border/50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/></svg>
                        <span class="font-medium text-foreground">Хурдан</span>
                    </div>
                    <div class="flex flex-col items-center gap-2 text-center p-3 rounded-lg bg-secondary/20 border border-border/50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/></svg>
                        <span class="font-medium text-foreground">Найдвартай</span>
                    </div>
                </div>

                <div class="pt-4">
                    <ConversionTable client:visible />
                </div>
            </div>
        </div>
    </div>
</Layout>
