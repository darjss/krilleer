---
import Layout from '@/layouts/Layout.astro'
import ConversionTable from '@/components/conversion-table'

const title = "Кирилл ↔ Латин хөрвүүлэлтийн хүснэгт | Kirilleer"
const description = "Монгол латин ↔ кирилл хөрвүүлэлтийн дүрэм, хүснэгтийг нэг дороос."
const ogImage = "/og-image.svg"

const siteUrl = Astro.url.toString()
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: title,
  url: siteUrl,
  inLanguage: "mn",
  description,
  breadcrumb: {
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", position: 1, name: "Нүүр", item: new URL('/', siteUrl).toString() },
      { "@type": "ListItem", position: 2, name: "Хөрвүүлэлтийн хүснэгт", item: siteUrl }
    ]
  }
}
---

<Layout title={title} description={description} ogImage={ogImage}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </Fragment>

  <div class="min-h-dvh px-4 sm:px-6 pt-24 sm:pt-32 pb-10">
    <div class="max-w-4xl mx-auto space-y-6">
      <h1 class="text-3xl sm:text-5xl font-black tracking-tight">Хөрвүүлэлтийн хүснэгт</h1>
      <p class="text-foreground/80">Доорх хүснэгтэд латин үсгээс кирилл үсэг рүү харгалзах дүрмүүдийг харууллаа.</p>
      <ConversionTable client:visible />
      <div>
        <a href="/" class="underline font-medium">Хөрвүүлэгч рүү буцах</a>
      </div>
    </div>
  </div>
</Layout>


